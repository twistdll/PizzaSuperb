@model List<PizzaTypeDTO>

@if (Model.Count == 0)
{
    <div class="product">
        <span class="no-result">Nothing was found</span>
    </div>
}
else
{
    @foreach (var item in Model)
    {
        <div class="product col-xl-4 col-md-6 col-12">
            <div class="product__content">
                <div class="photo">
                    @if (@item.PhotoUrl != null)
                    {
                        <img src="@item.PhotoUrl">
                    }
                    else
                    {
                        <img src="~/img/no-image.png">
                    }
                </div>
                <div class="price">
                    @if (item.OldPrice != item.Price)
                    {
                        <span class="price__value__old">@item.OldPrice $</span>
                    }
                    <span class="price__value">@item.Price $</span>
                </div>
                <div class="title">
                    @item.Name
                </div>
                <div class="description">
                    @item.Description
                </div>
                <div class="add-remove-block">
                    <div class="btns">
                        <span class="remove">-</span>
                        <span class="count" name="@item.Name">0</span>
                        <span class="add">+</span>
                    </div>
                </div>
            </div>
        </div>
    }
}
